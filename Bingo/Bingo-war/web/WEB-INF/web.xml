<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>NovoBingoServlet</servlet-name>
        <servlet-class>br.eti.sauloarruda.bingo.NovoBingoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BingoServlet</servlet-name>
        <servlet-class>br.eti.sauloarruda.bingo.BingoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovaCartelaServlet</servlet-name>
        <servlet-class>br.eti.sauloarruda.bingo.NovaCartelaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartelaServlet</servlet-name>
        <servlet-class>br.eti.sauloarruda.bingo.CartelaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SortearServlet</servlet-name>
        <servlet-class>SortearServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NovoBingoServlet</servlet-name>
        <url-pattern>/novo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BingoServlet</servlet-name>
        <url-pattern>/bingo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovaCartelaServlet</servlet-name>
        <url-pattern>/cartela/nova</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartelaServlet</servlet-name>
        <url-pattern>/cartela</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SortearServlet</servlet-name>
        <url-pattern>/bingo/sortear</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
